<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/norokoro_haikei"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/norokoro_haikei"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/erabu_button"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/koutai"/>

    <ImageView
        android:id="@+id/norou_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/noro"
        app:layout_constraintVertical_bias="0.604" />

    <ImageView
        android:id="@+id/korosu_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/koro"
        app:layout_constraintVertical_bias="0.604" />

    <ImageView
        android:id="@+id/dislikeImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/dislike_boy" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="かいと"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dislikeImageView"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/kainototta"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/kainorotta"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_above="@+id/norou_button"/>

    <ImageView
        android:id="@+id/kaikorosita"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/kaikorosita"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_above="@+id/korosu_button"/>

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/norokorotyan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="40dp"
        android:layout_above="@+id/kaikorosita"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp"
        android:layout_above="@+id/kaikorosita"/>





</RelativeLayout>