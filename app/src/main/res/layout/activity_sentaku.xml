<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/norokoro_haikei"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/norokoro_haikei"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="start"
        android:src="@drawable/start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="↓アイツのかお↓"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_above="@+id/dislike"/>

    <ImageView
        android:id="@+id/dislike"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:src="@drawable/dislike_boy"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        android:layout_above="@+id/nameEditText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ba55d3"
        android:padding="3dp"
        android:layout_above="@+id/line">

    <ImageView
        android:id="@+id/dislike_boy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_boy"/>

    <ImageView
        android:id="@+id/dislike_girl"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_girl"/>

    <ImageView
        android:id="@+id/dislike_bare"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_bare"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#ba55d3"
        android:padding="3dp"
        android:layout_above="@+id/nameEditText">

    <ImageView
        android:id="@+id/dislike_mister"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_mister" />

    <ImageView
        android:id="@+id/dislike_lady"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_lady" />

    <ImageView
        android:id="@+id/dislike_devil"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@drawable/dislike_devil" />

    </LinearLayout>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:hint="なまえをいれてね❤"
        android:layout_above="@id/start"/>

    <ImageView
        android:id="@+id/install"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-350dp"
        android:src="@drawable/install"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/ErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:background="#d8bfd8"
        android:layout_above="@+id/nameEditText"
        android:layout_centerInParent="true"
        />

</RelativeLayout>